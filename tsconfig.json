{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "preserveWatchOutput": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "strict": true,
        "declaration": true,
        "module": "ES2022",
        "target": "ES2022",
        "sourceMap": true,
        "lib": ["ES2022", "DOM"],
        "outDir": "dist",
        "paths": {
            "@src/*": ["./src/*"],
            "@dist/*": ["./dist/*"],
            "@tests/*": ["./tests/*"]
        }
      },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
  }